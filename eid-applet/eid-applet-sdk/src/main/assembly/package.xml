<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>sdk-zip</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<baseDirectory>eid-applet-sdk-${project.version}</baseDirectory>
	<files>
		<file>
			<source>src/main/assembly/README.txt</source>
			<fileMode>0644</fileMode>
		</file>
		<file>
			<source>src/main/assembly/3RD-PARTY-LICENSE.txt</source>
			<fileMode>0644</fileMode>
		</file>
		<file>
			<source>src/main/assembly/ChangeLog.txt</source>
			<fileMode>0644</fileMode>
		</file>
		<file>
			<source>../LICENSE.txt</source>
			<fileMode>0644</fileMode>
		</file>
		<file>
			<source>target/dev-guide/eid-applet-dev-guide-${project.version}.pdf</source>
			<fileMode>0644</fileMode>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>target/service-javadoc</directory>
			<outputDirectory>eid-applet-service-javadoc</outputDirectory>
			<excludes>
				<exclude>META-INF/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>target/service-spi-javadoc</directory>
			<outputDirectory>eid-applet-service-spi-javadoc</outputDirectory>
			<excludes>
				<exclude>META-INF/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>target/service-signer-javadoc</directory>
			<outputDirectory>eid-applet-service-signer-javadoc</outputDirectory>
			<excludes>
				<exclude>META-INF/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>target/service-cdi-javadoc</directory>
			<outputDirectory>eid-applet-service-cdi-javadoc</outputDirectory>
			<excludes>
				<exclude>META-INF/**</exclude>
			</excludes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<includes>
				<include>be.fedict.eid-applet:*</include>
			</includes>
			<excludes>
				<exclude>be.fedict.eid-applet:eid-applet-dev-guide</exclude>
				<exclude>be.fedict.eid-applet:eid-applet-core</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<excludes>
				<exclude>be.fedict.eid-applet:*</exclude>
				<exclude>bouncycastle:bcprov-jdk14</exclude>
			</excludes>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>
